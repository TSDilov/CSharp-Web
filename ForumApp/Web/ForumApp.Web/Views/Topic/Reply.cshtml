@model ForumApp.Web.ViewModels.Replies.ReplyInputModel
@{
    this.ViewData["Title"] = "Add new replay";
}
<h1 class="col-md-6 offset-md-3">Add new Replay</h1>

<form method="post" class="col-md-6 offset-md-3" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <input asp-for="Content" class="form-control" />
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <br />
    <br>
    <input type="submit" class="btn btn-primary" />
</form>
