@model ReceptionApp.Web.ViewModels.SearchRecuipes.SearchIndexViewModel
@{
    this.ViewData["Title"] = "Serach recipes by ingredient";
}

<h1>@this.ViewData["Title"]</h1>

<form asp-action="List" method="get">
    <div class="row">
        @foreach (var ingredient in Model.Ingredients)
        {
            <div class="col-1">
                <input id="ingredient_@ingredient.Id" type="checkbox" name="Ingredients" value="@ingredient.Id" class="form-check" />
                <label for="ingredient_@ingredient.Id">@ingredient.Name</label>
            </div>           
        }
    </div>
    <button class="btn btn-primary">Search</button>
</form>

