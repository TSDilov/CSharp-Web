@model FileManagerApp.Web.ViewModels.StreamInfoViewModel
@{
    this.ViewData["Title"] = "Add file";
}
<h1 class="col-md-6 offset-md-3">Add new File</h1>

<form method="post" class="col-md-6 offset-md-3" enctype="multipart/form-data" asp-controller="File" asp-action="Create">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label>File: </label>
        <input type="file" name="file"/>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <br>
    <input type="submit" class="btn btn-primary" />
</form>
